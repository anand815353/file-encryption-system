#: kivy  1.10.0

<GuiWindow>:
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: "AES CBC MODE"
        color: (0,0,0,1)
        font_size: 40
        center_x: root.width * 0.5
        center_y: root.top * 0.8
    Label:
        id: filename_label
        text: "Enter File Name"
        color: (0,0,0,1)
        font_size: 20
        right: filename_input.x - 60
        center_y: root.top * 0.6
    TextInput:
        id: filename_input
        font_size: 20
        center_x: root.width * 0.5
        center_y: root.top * 0.6
        height: 35
        width: 300
    Label:
        id: password_label
        text: "Password"
        color: (0,0,0,1)
        font_size: 20
        right: password_input.x - 60
        center_y: root.top * 0.5
    TextInput:
        id: password_input
        font_size: 20
        password: False
        center_x: root.width * 0.5
        center_y: root.top * 0.5
        height: 35
        width: 300
    Button:
        id: Decrypt_button
        font_size: 20
        center_x: root.width * 0.5
        center_y: password_input.y - 100
        text: "Decrypt"
        size: (150,100)
        on_press: root.user()
    Label:
        id: success
        pos: (100,100)
        color: (0,0,0,1)
        text: ""